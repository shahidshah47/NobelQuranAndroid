<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160"
                android:layout_margin="@dimen/_10"
                app:cardBackgroundColor="@color/appColor"
                app:cardCornerRadius="@dimen/_10">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bg">

                    <ImageView
                        android:id="@+id/islamLogoIV"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_islam_home"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <LinearLayout
                        android:id="@+id/bannerTopLL"
                        android:layout_width="@dimen/_0"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10"
                        android:paddingTop="@dimen/_5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/todayIslamicDateTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular_font"
                            android:gravity="center_vertical"
                            android:text="Jumada II 12, 1444 AH"
                            android:textColor="@color/white"
                            android:textSize="@dimen/normal_text_size" />

                        <TextView
                            android:id="@+id/todayEnglishDateTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular_font"
                            android:gravity="center_vertical"
                            android:text="Thursday, 5 Jan 2023 05:00 PM"
                            android:textColor="@color/white"
                            android:textSize="@dimen/normal_text_size" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/alarmIV"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30"
                        android:layout_marginStart="@dimen/_10"
                        android:layout_marginTop="@dimen/_10"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_alarm"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bannerTopLL" />

                    <ImageView
                        android:id="@+id/namazSunIV"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_60"
                        android:layout_marginTop="@dimen/_10"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_zohar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bannerTopLL" />

                    <LinearLayout
                        android:id="@+id/nextNamazTimeLL"
                        android:layout_width="@dimen/_0"
                        android:layout_height="@dimen/_0"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_10"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/islamLogoIV"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/alarmIV">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular_font"
                            android:text="Next Prayer Time is"
                            android:textColor="@color/white"
                            android:textSize="@dimen/app_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold_font"
                            android:text="01:30 PM (Zohar)"
                            android:textColor="@color/white"
                            android:textSize="@dimen/medium_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10"
                            android:fontFamily="@font/regular_font"
                            android:text="In 50 minutes"
                            android:textColor="@color/white"
                            android:textSize="@dimen/normal_text_size" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginHorizontal="@dimen/_10"
                app:cardBackgroundColor="@color/appDarkColor"
                app:cardCornerRadius="@dimen/_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10">

                    <ImageView
                        android:layout_width="@dimen/_20"
                        android:layout_height="@dimen/_20"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_quran_tab"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10"
                        android:layout_weight="1"
                        android:fontFamily="@font/regular_font"
                        android:text="@string/resume_quran"
                        android:textColor="@color/white"
                        android:textSize="@dimen/medium_text_size" />

                    <ImageView
                        android:layout_width="@dimen/_20"
                        android:layout_height="@dimen/_20"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_baseline_navigate_next_24" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/homeItemRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10"
                android:layout_marginTop="@dimen/_10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold_font"
                android:padding="@dimen/_10"
                android:text="Namaz Timing"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10"
                app:cardBackgroundColor="@color/miniLightGreyColor"
                app:cardCornerRadius="@dimen/_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold_font"
                            android:gravity="center_vertical"
                            android:text="Fajar"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10"
                            android:fontFamily="@font/bold_font"
                            android:gravity="center_vertical"
                            android:text="05:30 AM"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_20"
                            android:layout_height="@dimen/_20"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_alarm"
                            app:tint="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1"
                        android:background="@color/miniLightGreyColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold_font"
                            android:gravity="center_vertical"
                            android:text="Zohar"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10"
                            android:fontFamily="@font/bold_font"
                            android:gravity="center_vertical"
                            android:text="05:30 AM"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_20"
                            android:layout_height="@dimen/_20"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_alarm"
                            app:tint="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1"
                        android:background="@color/miniLightGreyColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold_font"
                            android:gravity="center_vertical"
                            android:text="Asar"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10"
                            android:fontFamily="@font/bold_font"
                            android:gravity="center_vertical"
                            android:text="05:30 AM"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_20"
                            android:layout_height="@dimen/_20"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_alarm"
                            app:tint="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1"
                        android:background="@color/miniLightGreyColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold_font"
                            android:gravity="center_vertical"
                            android:text="Maghrib"
                            android:textColor="@color/white"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10"
                            android:fontFamily="@font/bold_font"
                            android:gravity="center_vertical"
                            android:text="05:30 AM"
                            android:textColor="@color/white"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_20"
                            android:layout_height="@dimen/_20"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_alarm" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1"
                        android:background="@color/miniLightGreyColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bold_font"
                            android:gravity="center_vertical"
                            android:text="Isha"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10"
                            android:fontFamily="@font/bold_font"
                            android:gravity="center_vertical"
                            android:text="05:30 AM"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medium_text_size"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_20"
                            android:layout_height="@dimen/_20"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_alarm"
                            app:tint="@color/black" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold_font"
                android:paddingHorizontal="@dimen/_10"
                android:paddingTop="@dimen/_10"
                android:paddingBottom="@dimen/_5"
                android:text="Verse of the day"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10"
                android:fontFamily="@font/regular_font"
                android:paddingHorizontal="@dimen/_10"
                android:text="“And Allah would not punish them while they seek forgiveness” [Quran 8:33]"
                android:textColor="@color/black"
                android:textSize="@dimen/app_text_size" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>